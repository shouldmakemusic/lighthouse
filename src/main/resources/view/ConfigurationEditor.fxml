<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.collections.FXCollections ?>

<AnchorPane prefHeight="369.0" prefWidth="756.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.hirschauer.yaas.lighthouse.visual.ConfigurationController">
   <children>
      <BorderPane prefHeight="277.0" prefWidth="711.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <TableView fx:id="configTable" prefHeight="121.0" prefWidth="196.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="colMidiCommand" prefWidth="108.0" text="Command type" />
                <TableColumn fx:id="colMidiValue" minWidth="2.0" prefWidth="103.0" text="Midi value" />
                  <TableColumn fx:id="colController" prefWidth="116.0" text="Controller" />
                  <TableColumn fx:id="colCommand" prefWidth="88.0" text="Command" />
                  <TableColumn fx:id="colValue1" prefWidth="74.0" text="Value 1" />
                  <TableColumn fx:id="colValue2" prefWidth="75.0" text="Value 2" />
                  <TableColumn fx:id="colValue3" prefWidth="63.0" text="Value 3" />
              </columns>
            </TableView>
         </center>
         <top>
            <HBox prefHeight="118.0" prefWidth="673.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="51.0" prefWidth="190.0">
                     <children>
                        <Label text="Midi command type" />
                        <ComboBox fx:id="midiCommandCombo" prefWidth="150.0">
                        <items>
								<FXCollections fx:factory="observableArrayList">
									<String fx:value="Midi Note" />
									<String fx:value="Midi CC" />
								</FXCollections>
						</items>
                        </ComboBox>
                        <Label text="Midi value" />
                        <TextField fx:id="txtMidiValue" maxWidth="-Infinity" prefHeight="26.0" prefWidth="149.0" promptText="1-127" VBox.vgrow="NEVER">
                           <VBox.margin>
                              <Insets right="10.0" />
                           </VBox.margin>
                        </TextField>
                        <Button fx:id="btnReceiveMidi" mnemonicParsing="false" text="Receive Midi Signal">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin></Button>
                     </children>
                  </VBox>
                  <VBox prefHeight="51.0" prefWidth="198.0">
                     <children>
                        <Label text="Select a controller" />
                        <ComboBox fx:id="controllerCombo" prefWidth="150.0" />
                        <Label text="Select a command" />
                        <ComboBox fx:id="commandCombo" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="118.0" prefWidth="112.0">
                     <children>
                        <Label text="Values" />
                        <TextField fx:id="txtValue1" promptText="CURRENT" />
                        <TextField fx:id="txtValue2" />
                        <TextField fx:id="txtValue3" />
                     </children>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox prefHeight="110.0" prefWidth="201.0">
                     <children>
                        <Button fx:id="btnAdd" mnemonicParsing="false" text="Add new configuration to table">
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin></Button>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="btnSave" mnemonicParsing="false" text="Save to file" />
                              <Button fx:id="btnLoad" mnemonicParsing="false" text="Load from file">
                                 <HBox.margin>
                                    <Insets bottom="5.0" left="15.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                        <Button fx:id="btnReceive" mnemonicParsing="false" text="Load configuration from YAAS">
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="btnSend" mnemonicParsing="false" text="Send configuration to YAAS" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
